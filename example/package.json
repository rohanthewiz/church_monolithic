{
  "name": "church",
  "version": "0.1.4",
  "description": "The Church Web Platform",
  "main": "index.js",
  "scripts": {
    "build-css-task:scss-compile": "node-sass-chokidar assets_src/scss/ -o dist/css",
    "build-css-task:stylus-compile": "stylus assets_src/styl/master.styl -o dist/css/app.css -m",
    "build-css": "npm-run-all -p build-css-task:*",
    "build-all": "npm run build-css",
    "watch": "onchange 'assets_src/**/*' -- npm run build-css"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "author": "Rohan Allison",
  "license": "ISC",
  "dependencies": {
    "lodash": "~4.17.5",
    "hoek": "~4.2.1",
    "chokidar-cli": "^1.2.0",
    "element-theme-default": "^1.3.2",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "http-server": "^0.10.0",
    "onchange": "^3.2.1",
    "stylus": "^0.54.5"
  }
}
