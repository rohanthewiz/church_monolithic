@require _globals

// Reusable little things :-)
btn-add()
  display: inline-block;
  position: absolute;
  font-size: 1.5rem;
  width: 1.4em;
  line-height: 1.4
  color: theme-cobalt-add-button-color
  background-color: lightgreen;
  text-align: center;
  outline: none;
  border-radius: 1.1rem;
  border: none;
  cursor: pointer
  &:link, &:visited
    text-decoration none
    color: theme-cobalt-add-button-color
